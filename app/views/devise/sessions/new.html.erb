<div class="col-xs-12 col-md-12 col-sm-12 topmargin">
      <%= render partial: "shared/flash_messages", flash: flash %> 
</div>
<div class="col-xs-12 col-md-12 col-sm-12 tcenter">
  <h3 class="heading orange">Sign in for Trainers</h3><br>
  <%= link_to "in | Sign in with LinkedIn",trainer_omniauth_authorize_path(:linkedin),:id=>"linkauth", :class=>"btn btn-success bannerbtn" %><br>
  <h3>Or</h3>
  <h4><b>Sign in with Email</b></h4><br>
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-horizontal center" style="width:450px;">
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, :placeholder => "Email", :class=>"form-control" %>    
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: false, :placeholder => "password", :class=>"form-control" %>    
        </div><%#
        <div class="form-group">
          <%= f.check_box :remember_me %><%#
          <%= f.label :remember_me %><%#
        </div>%>
        <div class="form-group">
          <%= f.submit "Sign In", :class=>"btn btn-success padding5"%>
          <%#<p class="orange smalltext">To find your next training opportunity.</p>%>
        </div>
        <div class="form-group">
          <%= render "devise/shared/links" %>
        </div>
      </div>
  <%end%> 
</div>