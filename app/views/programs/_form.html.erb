<%= form_for([@recruiter, @recruiter.programs.build]) do |f| %>
	<div class="form-horizontal" id="addprog"> 	  
		<div class="col-xs-12 col-md-12 col-sm-12 white">
			<div class="col-xs-12 col-md-12 col-sm-12 tcenter">
				What Expertise(Skill Set) you are looking for?
				<br> 
				<%= f.select :category, ['It','Social Networking','Marketing'], :class=>"form-control" %>
			</div>
			<div class="col-xs-12 col-md-6 col-sm-12">
				Program Name<br><%= f.text_field :name, :class=>"form-control" %>
			</div>
			<div class="col-xs-12 col-md-6 col-sm-12">
				Program Location<br><%= f.text_field :city,:class=>"form-control"  %>
			</div>
			<div class="col-xs-12 col-md-12 col-sm-12">
				<div class="col-md-1"></div>
				<div class="col-xs-12 col-md-10 col-sm-12">
					Program Brief<br><%= f.text_area :program_details, :size=>'0x5',:class=>"form-control"  %>
				</div>
				<div class="col-md-1"></div>
			</div>
			<div class="col-xs-12 col-md-12 col-sm-12">
				Program Dates<br>
				<%= f.date_select :start_date,:class=>"form-control" %>&nbsp;to&nbsp;<%= f.date_select :end_date,:class=>"form-control" %>
			</div>
			<div class="col-xs-12 col-md-12 col-sm-12 topmargin">
				<div class="col-md-2"></div>
				<div class="col-xs-12 col-md-5 col-sm-12">
					<%= f.text_field :duration, :placeholder=>"Program Duration",:class=>"form-control" %>
				</div>
				<div class="col-xs-12 col-md-3 col-sm-12">
					<%= f.select :duration_type,['Select Duration','Hours','Days','Weeks'], :class=>"form-control" %>
				</div>
				<div class="col-md-2"></div>
			</div>
			<div class="col-xs-12 col-md-12 col-sm-12">
				<div class="col-md-5">
					Program Fees<br>
					<%= f.text_field :payment_detail,:class=>"form-control" %>
				</div>
				<div class="col-md-7 topmargin"> 
					Per <%= f.select :payment_type,['Day','Hour'],:class=>"form-control" %> in <%= f.select :currency,['INR','USD'],:class=>"form-control" %>
				</div>
			</div>
			<%#<div class="col-xs-12 col-md-12 col-sm-12 tcenter topmargin">
				<p>Along With</p>
				<div class="col-md-4 col-xs-12 col-sm-12">
					<%= f.check_box :travel_expense %><%# Travel Expenses
				</div>
				<div class="col-md-4 col-xs-12 col-sm-12"> 
					<%= f.check_box :food_expense %> <%#Food Expenses
				</div>
				<div class="col-md-4 col-xs-12 col-sm-12">
					<%= f.check_box :stay_expense %> <%#Travel Expenses
				</div>
			</div>%>
		</div>		
		<div class="col-xs-12 col-md-12 col-sm-12 topmargin" style="margin-bottom:10px;">
			<table>
				<tr>
					<td><%= f.submit "Post Program", :class=>"btn btn-success" %></td>
					<td><%= f.submit "Cancel", :class=>"btn btn-warning" %></td>
				</tr>
			</table>
		</div>
	</div>
<%end%>

