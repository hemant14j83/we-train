<div class="col-xs-12">
  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= image_tag("profile_pics/pic_def.png", :class => "profile_pic") %>        
      </div>      
    </div>
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Related Links</h3>
      </div>
      <div class="panel-body">
        <p>News feed of latest relevant job available</p>
      </div>
    </div>
  </div>
  <div class="col-xs-9">
      <% if @recruiter.account_status=="pending" %>
        <div class="col-xs-12 label label-warning">
          <font size="2px">Your Account is in "<font color="red">Pending</font>" state, please <a href="/">contact us</a> if you want it approved instantly.</font>          
        </div>
        <div style="height:20px;"></div>
      <%end%>
      <h3>Update <%= resource_name.to_s.humanize %> Profile</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-horizontal">
          <div class="col-xs-6">
            <div class="form-group col-xs-12">
              <%= f.label :firm_name %>
              <%= f.text_field :firm_name, :class=>"form-control" %>
            </div>
            <div class="form-group col-xs-12">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, :disabled => true, :class=>"form-control" %>
            </div>
            <div class="form-group col-xs-12">
              <%= f.label :current_password %>
              <%= f.password_field :current_password, :class=>"form-control" %>
            </div>            
            <div class="form-group col-xs-12">
              <%= f.label :firm_type %>
              <%= f.select :firm_type, ['','College','Company'], :class=>"form-control" %>
            </div>
            <div class="form-group col-xs-12">
              <%= f.label :firm_number %>
              <%= f.text_field :firm_number, :class=>"form-control" %>
            </div>
            <div class="form-group col-xs-12">
              <%= f.label :firm_address %>
              <%= f.text_area(:firm_address, size: '50x4', :class=>"form-control")%>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="form-group col-xs-12">
              <%= f.label :contact_person_name %>
              <%= f.text_field :contact_person_name, :class=>"form-control" %>
            </div>
            <div class="form-group col-xs-12">
              <%= f.label :contact_person_email %>
              <%= f.email_field :contact_person_email, :class=>"form-control" %>
            </div>
            <div class="form-group col-xs-12">
              <%= f.label :contact_person_number %>
              <%= f.text_field :contact_person_number, :class=>"form-control" %>
            </div>
            <div class="form-group col-xs-6">
              <%= f.label :city %>
              <%= f.text_field :city, :class=>"form-control" %>
            </div>
            <div class="form-group col-xs-6">
              <%= f.label :state %>
              <%= f.text_field :state, :class=>"form-control" %>
            </div> 
            <div class="form-group col-xs-6">
              <%= f.label :country %><br>
              <%= f.select :country, ['Select Country','India'], :class=>"form-control" %>
            </div>          
            <div class="form-group col-xs-6">
              <%= f.label :pincode %>
              <%= f.text_field :pincode, :class=>"form-control" %>
            </div> 
          </div>
          
          <!--<div class="form-group col-xs-12">
            <%= f.label :current_password %>
            <%= f.password_field :current_password, autocomplete: false, :class=>"form-control" %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.password_field :password, autocomplete: "off", :class=>"form-control" %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control" %>
          </div>-->
          <div class="col-xs-12"> 
            <h5><b>Other Details</b></h5>
            <div class="otherbox">       
              <div class="form-group col-xs-8">
                <%= f.label :subscribed_plan, "Subscribed Plan" %>
                <%= f.text_field :subscribed_plan, :disabled=> true, :class=>"form-control" %>
              </div>
              <div class="form-group col-xs-4">
                <br><a href="/">Upgrade<br>Plan</a>
              </div>
            </div>
          </div>          
          <div class="form-group col-xs-3">
            <%= f.submit "Update Details", :class=>"form-control btn btn-success" %>
          </div>
          <div class="form-group col-xs-3">
            <%= f.submit "Cancel", :class=>"form-control btn btn-warning" %>
          </div>
        </div>
        <%end%>
  </div>
