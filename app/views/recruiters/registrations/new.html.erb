<script type="text/javascript">
function checkPasswordMatch() {
    var password = $("#rpass").val();
    var confirmPassword = $("#rcpass").val();

    if (password != confirmPassword){
        $("#divCheckPasswordMatch").html("<span style='color:red;'>Passwords do not match!</span>");
      }
    else{
        $("#divCheckPasswordMatch").html("<span style='color:#30AD23;'>Passwords match.</span>");
      }
}

$(document).ready(function () {
   $("#txtConfirmPassword").keyup(checkPasswordMatch);
});  
</script>
<div class="col-xs-12 col-md-12 col-sm-12 topmargin">
    <%= render partial: "shared/flash_messages", flash: flash %> 
</div>
<div class="col-xs-12 col-sm-12 col-md-12 tcenter">
  <h3 class="heading orange">Sign up for Recruiters</h3><br>
  <%#= link_to "in | Sign up with LinkedIn",trainer_omniauth_authorize_path(:linkedin), :class=>"btn btn-success bannerbtn" %><%#<br>
  <h3>Or</h3>
  <h4><b>Sign up with Email</b></h4><br>%>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-horizontal center" style="width:450px;">
        <div class="form-group col-sm-12 col-md-12 col-xs-12">
          <%= f.email_field :email, autofocus: true, :placeholder => "Email", :class=>"form-control" %>
        </div>      
        <div class="form-group col-md-6 col-xs-12 col-sm-12">
          <%= f.text_field :firm_name, autofocus: true, :placeholder => "Firm Name", :class=>"form-control" %>
        </div>
        <div class="form-group col-md-6 col-xs-12 col-sm-12">
          <%= f.select :firm_type,['Please Select Firm Type','College','Company','Others'], :class=>"form-control" %>
        </div>
        <div class="col-xs-12 col-m2-12 col-sm-12">
          <div class="form-group col-md-6 col-xs-12 col-sm-12" style="float:left;">
            <%= f.password_field :password, autocomplete: "off",:id=>"rpass", :placeholder => "Password", :class=>"form-control" %>
          </div> 
          <div class="form-group col-md-6 col-xs-12 col-sm-12" style="margin-left:-3%;">
            <%= f.password_field :password_confirmation, autocomplete: "off",:id=>"rcpass",:onChange=>"checkPasswordMatch();", :placeholder => "Confirm Password", :class=>"form-control" %>
          </div>
          <div class="form-group col-md-6 col-xs-12 col-sm-12" style="margin-left:-3%;">
            <div class="registrationFormAlert" id="divCheckPasswordMatch"></div>
          </div>
        </div>
        <div class="form-group col-md-12 col-xs-12 col-sm-12">
          <%= f.button "Sign up",:onClick=>"checkPasswordMatch();", :class=>"btn btn-success" %>
          <p class="orange smalltext">To find suitable trainer for your next training program.</p>
        </div>        
        <div class="form-group col-md-12 col-xs-12 col-sm-12">
          <%= render "recruiters/shared/links" %>
        </div>
      </div>
  <%end%>
</div>
