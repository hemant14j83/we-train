<script type="text/javascript">
function checkPasswordMatch() {
    var password = $("#rpass").val();
    var confirmPassword = $("#rcpass").val();

    if (password != confirmPassword){
        $("#divCheckPasswordMatch").html("<span style='color:red;'>Passwords do not match!</span>");
      }
    else{
        $("#divCheckPasswordMatch").html("<span style='color:#30AD23;'>Passwords match.</span>");
      }
}

$(document).ready(function () {
   $("#txtConfirmPassword").keyup(checkPasswordMatch);
});  
</script>
<div class="col s12 m12 l12">
      <%= render partial: "shared/flash_messages", flash: flash %> 
</div>
<div id="login" class="col s12 m12 l12 text-center">
  <div class="col hide-on-small m3 l3">&nbsp;</div>
  <div id="login" class="col s12 m6 l6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class=""> <!--box-title s12 m12 l12 light-blue"-->
        <h5>Recruiters Signup</h5>
      </div>
      <div class="input-field col m12 s12 l12">
        <!--i class="mdi-action-account-box prefix"></i-->
        <%= f.email_field :email, autofocus: true, :placeholder => "Email", :class=>"" %>
      </div>
      <div class="input-field col m12 s12 l12">
        <%= f.text_field :firm_name, autofocus: false, :placeholder => "Firm Name", :class=>"" %>
      </div>
      <div class="input-field col m12 s12 l12">
        <%= f.select :firm_type,['Firm Type','College','Company'],:class=>"" %>
        <%#= f.text_field :firm_name, autofocus: false, :placeholder => "Firm Name", :class=>"" %>
      </div><br>
      <div class="input-field col m6 s12 l6">
        <%= f.password_field :password, autocomplete: "off",:id=>"rpass", :placeholder => "Password", :class=>"" %>
      </div>
      <div class="input-field col m6 s12 l6">
        <%= f.password_field :password_confirmation, autocomplete: "off",:id=>"rcpass",:onChange=>"checkPasswordMatch();", :placeholder => "Confirm Password", :class=>"" %>
      </div>
      <div class="form-group col m12 s12 l12" style="margin-left:-3%;">
            <div class="registrationFormAlert" id="divCheckPasswordMatch"></div>
          </div>
      <div class="actions">
        <%= f.button "Sign up",:onClick=>"checkPasswordMatch();", :class=>"btn btn-success" %>
        <p class="smalltext text-center green-text">To find suitable trainer for your next training program.</p>
      </div>
      <div class="form-group" style="margin-top:2%;">
        <%= render "recruiters/shared/links" %>
      </div>
    <%end%>
  </div>
  <div class="col hide-on-small m3 l3">&nbsp;</div>
</div>