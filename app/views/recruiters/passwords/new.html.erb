<div class="col s12 m12 l12">
  <div class="col hide-on-small m3 l3">&nbsp;</div>
  <div id="login" class="col s12 m6 l6 text-center">    
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div>
        <h5 class="heading">Forgot Password</h5>
      </div>
  		<%= devise_error_messages! %>
      <div class="form-horizontal">
        <div class="input-field">
          <i class="mdi-action-account-box prefix"></i>
          <%= f.email_field :email, autofocus: true, :placeholder=>"Your Registered Email Address" %>
        </div>
        <div class="actions">
    		  <%= f.submit "Send me reset password instructions", :class=>"btn btn-success" %>      	
        </div>
        <div class="form-group" style="margin-top:2%;">
          <%= render "recruiters/shared/links" %>
        </div>
      </div>
    <%end%>
  </div>
  <div class="col hide-on-small m3 l3">&nbsp;</div>
</div>
