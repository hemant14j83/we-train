<div class="">
	<% if qualification.course_name!=nil %>
		<ul class="collection" style="background-color:#fff;font-size:0.9em;font:'Arimo',sans-serif;">
			<li class="collection-hd">
				<div class="text-center">
					<h5>
						<span style="color:#e37343;">
							<%= qualification.course_type %>
						</span>
					</h5>
				</div>
			</li>
			<li class="collection-item">
				<div class="col s12 m6 l6">
					<ul>
						<li>
              				<b><span style="color:#e37343;">Course</span></b>: <br>
              				<ol>
              					<li><%= qualification.course_name %></li>
              				</ol>
              			</li>
              			<li>
              				<b><span style="color:#e37343;">University/College</span></b>: <br>
              					<ol>
              						<li><%= qualification.completed_from %></li>
              					</ol>
              			</li>
              			<li>
              				<b><span style="color:#e37343;">Duration</span></b>: <br>
              					<ol>
              						<li>
              							<%= qualification.start_date %> to
              							<%= qualification.end_date %>
              						</li>
              					</ol>
              			</li>
              			<li>
              				<b><span style="color:#e37343;">Percentage/Grade</span></b>: <br>
              					<ol>
              						<li>
              							<%= qualification.percentage %>(<%= qualification.grade%>)
              						</li>
              					</ol>
              			</li>
					</ul>
				</div>
				<div clas="col s12 m6 l6">
					<ul>
						<li>
							<b>
								<span style="color:#e37343;">Course Description</span>
							</b>:<br>
							<span class="justify">
								<%= qualification.course_description %>
							</span>
						</li>
					</ul>
				</div>
				<div class="col s12 l12 m12" style="margin-bottom:10px;">
				  <% if trainer_signed_in? %>
			    	<div align="right">
			    		<%= link_to 'Update', "#editqualmodal_#{qualification.id}",:class=>"btn btn-success modal-trigger" %>
				      	<%= link_to 'Remove', qualification, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-success red lighten-2" %>
				    </div>
				  <%end%>
				</div>
			</li>			
		</ul>
	<% end %>
</div>
<div id='<%="editqualmodal_#{qualification.id}"%>' class="modal">
  <div class="modal-content">
      <div class="modal-header text-center">
          <h5 class="modal-title">Update Qualification</h5>
      </div>
      	<%= render 'qualifications/editqualification', qualification: qualification %>
      		&nbsp;
  </div>
</div>